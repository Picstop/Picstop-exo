{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
    "airbnb-base",
    "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "max-len": ["error", { "code": 200 }],
        "object-curly-spacing": ["error", "always"],
        "no-console": "off",
        "allowForLoopAfterthoughts": true,
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ]
    }
   
}
