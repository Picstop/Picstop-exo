{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript",
        "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "max-len": ["error", { "code": 200 }],
        "object-curly-spacing": ["error", "always"],
        "no-console": "off",
        "allowForLoopAfterthoughts": 0,
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ],
        "no-underscore-dangle": "warn",
        "linebreak-style": "off",
        "no-unused-vars": "warn"
    },
    "settings": {
        "import/resolver": {
            "babel-plugin-root-import": {}
        }
    }
}
